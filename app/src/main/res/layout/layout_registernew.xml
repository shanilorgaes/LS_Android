<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutmain"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustPan"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    android:background="@drawable/bg_home"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline236"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/half_fade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline421" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/reg_head"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline365"
        app:layout_constraintEnd_toStartOf="@+id/guideline396"
        app:layout_constraintStart_toStartOf="@+id/guideline393"
        app:layout_constraintTop_toTopOf="@+id/guideline343" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/bottom_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline400" />

    <Button
        android:id="@+id/buttons_continue"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/blue_button_shade"
        android:text="CONTINUE"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <View
        android:id="@+id/view5"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@drawable/lines"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scan_luck"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lucky_scan_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline456" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline456"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline343"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline421"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline396"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".81" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline393"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline365"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".72" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline236"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FDF3A0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline405"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".85" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/lines"
            android:backgroundTint="@color/Red"
            app:layout_constraintBottom_toBottomOf="@+id/edt_name"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282" />

        <View
            android:id="@+id/view11"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/lines"
            android:backgroundTint="@color/Red"
            app:layout_constraintBottom_toBottomOf="@+id/edt_mob"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282" />

        <View
            android:id="@+id/view12"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/lines"
            android:backgroundTint="@color/Red"
            app:layout_constraintBottom_toBottomOf="@+id/edt_email"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282" />

        <View
            android:id="@+id/view13"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/lines"
            android:backgroundTint="@color/Red"
            app:layout_constraintBottom_toTopOf="@+id/edt_proffession"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/lines"
            android:backgroundTint="@color/Red"
            app:layout_constraintBottom_toTopOf="@+id/_dynamic"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline251"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".03" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:background="@drawable/red_cap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline251" />


        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_eddtxt_trans"
            android:gravity="center|bottom"
            android:hint="@string/your_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            app:layout_constraintBottom_toTopOf="@+id/guideline259"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />
        <!--
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="bottom|end"
                    app:ccp_defaultPhoneCode="91"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textGravity="CENTER"
                    app:layout_constraintBottom_toTopOf="@+id/guideline260"
                    app:layout_constraintEnd_toStartOf="@+id/guideline282"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline259" />-->

        <EditText
            android:id="@+id/edt_mob"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_eddtxt_trans"
            android:gravity="center|bottom"
            android:hint="@string/mobile_with_country_code"
            android:inputType="phone"
            android:maxLength="14"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline260"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toBottomOf="@+id/edt_name" />
        <EditText
            android:id="@+id/edt_otp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_eddtxt_trans"
            android:drawableBottom="@drawable/lines"
            android:drawableTint="@color/Red"
            android:gravity="center|bottom"
            android:hint="ENTER OTP"
            android:inputType="number"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline260"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toBottomOf="@+id/edt_name" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_eddtxt_trans"
            android:gravity="center|bottom"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            app:layout_constraintBottom_toTopOf="@+id/guideline298"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toBottomOf="@+id/edt_mob" />

        <TextView
            android:id="@+id/agegroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="bottom|center"
            android:text="@string/age_group"
            android:textColor="@color/LightGrey"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            app:layout_constraintBottom_toTopOf="@+id/guideline301"
            app:layout_constraintEnd_toStartOf="@+id/guideline302"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toTopOf="@+id/guideline298" />

        <Spinner
            android:id="@+id/agegroup_spinner"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_reg_bg"
            android:gravity="top|center"

            app:layout_constraintEnd_toEndOf="@+id/agegroup"
            app:layout_constraintStart_toStartOf="@+id/agegroup"
            app:layout_constraintTop_toBottomOf="@+id/agegroup" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="bottom|center"
            android:text="@string/gender"
            android:textColor="@color/LightGrey"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            app:layout_constraintBottom_toTopOf="@+id/guideline301"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/agegroup"
            app:layout_constraintTop_toTopOf="@+id/guideline298"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_reg_bg"
            android:gravity="top|center"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toEndOf="@+id/agegroup"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <Spinner
            android:id="@+id/_dynamic"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_reg_bg"
            android:gravity="top|center"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_proffession" />

        <EditText
            android:id="@+id/edt_proffession"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_eddtxt_trans"
            android:gravity="center|bottom"
            android:hint="@string/profession"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline337"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toTopOf="@+id/guideline301" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout48"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline405"
            app:layout_constraintStart_toStartOf="@+id/guideline282"
            app:layout_constraintTop_toBottomOf="@+id/_dynamic">


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline751"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".3" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/added_wish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline751" />

            <com.quinny898.library.persistentsearch.SearchBox
                android:id="@+id/searchview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guideline751"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline299"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline259"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline260"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline298"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline301"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline337"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".51" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout16"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home_sideshade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home_sideshade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>