<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustPan"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home"
            app:layout_constraintBottom_toBottomOf="@id/scroll"
            app:layout_constraintEnd_toEndOf="@id/scroll"
            app:layout_constraintStart_toStartOf="@id/scroll"
            app:layout_constraintTop_toTopOf="@id/scroll">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline241"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".93" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline237"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline239"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.19" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline240"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.81" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/reg_head"
                app:layout_constraintBottom_toTopOf="@+id/guideline238"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toTopOf="@+id/guideline237" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/bottom_yellow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline241" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline242"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.21" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout48"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline750"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toTopOf="@+id/guideline242">


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@drawable/lines"
                    android:backgroundTint="@color/Red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline751"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@drawable/lines"
                    android:backgroundTint="@color/Red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/added_wish"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline751" />
                <com.quinny898.library.persistentsearch.SearchBox
                    android:id="@+id/searchview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toTopOf="@+id/guideline630"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toTopOf="@+id/guideline631"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toBottomOf="@+id/edt_email"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toBottomOf="@+id/female"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toBottomOf="@+id/agegroup"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/lines"
                android:backgroundTint="@color/Red"
                app:layout_constraintBottom_toBottomOf="@+id/edt_proffession"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239" />


            <EditText
                android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_eddtxt_trans"
                android:gravity="center|bottom"
                android:hint="@string/your_name"
                android:inputType="textPersonName"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/guideline630"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout48" />


            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                app:ccp_defaultPhoneCode="91"
                app:ccp_showFlag="false"
                app:ccp_showNameCode="false"
                app:ccp_textGravity="CENTER"
                app:layout_constraintBottom_toTopOf="@+id/guideline631"
                app:layout_constraintEnd_toStartOf="@+id/guideline638"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toTopOf="@+id/guideline630" />
            <EditText
                android:id="@+id/edt_mob"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_eddtxt_trans"
                android:gravity="center|start|bottom"
                android:hint="@string/mobile_with_country_code"
                android:inputType="phone"
                android:maxLength="14"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline631"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline638"
                app:layout_constraintTop_toBottomOf="@+id/edt_name" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_eddtxt_trans"
                android:gravity="center|bottom"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline633"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toBottomOf="@+id/edt_mob" />


            <EditText
                android:id="@+id/edt_proffession"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_eddtxt_trans"
                android:gravity="center|bottom"
                android:hint="@string/profession"
                android:inputType="textPersonName"
                android:textSize="14dp"
                android:imeOptions="actionNext"
                app:layout_constraintBottom_toTopOf="@+id/guideline643"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toBottomOf="@+id/edt_email" />

            <EditText
                android:id="@+id/edt_otp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_eddtxt_trans"
                android:gravity="center|bottom"
                android:hint="ENTER OTP"
                android:inputType="number"
                android:textSize="14dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/guideline631"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toBottomOf="@+id/edt_name" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline649"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.82" />

            <TextView
                android:id="@+id/txt18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="@string/gender"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toTopOf="@+id/guideline644" />

            <Button
                android:id="@+id/trans"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_sqre_rectangle"
                android:text="T"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline649"
                app:layout_constraintEnd_toStartOf="@+id/guideline635"
                app:layout_constraintStart_toStartOf="@+id/guideline638"
                app:layout_constraintTop_toTopOf="@+id/female" />

            <Button
                android:id="@+id/female"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_sqre_rectangle"
                android:text="F"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline649"
                app:layout_constraintEnd_toStartOf="@+id/guideline637"
                app:layout_constraintStart_toStartOf="@+id/guideline639"
                app:layout_constraintTop_toBottomOf="@+id/txt18" />

            <Button
                android:id="@+id/male"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_sqre_rectangle"
                android:text="M"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline649"
                app:layout_constraintEnd_toStartOf="@+id/guideline641"
                app:layout_constraintStart_toStartOf="@+id/guideline640"
                app:layout_constraintTop_toBottomOf="@+id/txt18" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline638"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.39" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline641"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.62" />


            <TextView
                android:id="@+id/agegroup"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:text="@string/age_group"
                android:textColor="@color/LightGrey"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline642"
                app:layout_constraintEnd_toStartOf="@+id/guideline240"
                app:layout_constraintStart_toStartOf="@+id/guideline239"
                app:layout_constraintTop_toBottomOf="@+id/edt_proffession" />

            <Spinner
                android:id="@+id/agegroup_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_reg_bg"
                android:gravity="top|center"

                app:layout_constraintEnd_toStartOf="@+id/guideline640"
                app:layout_constraintStart_toStartOf="@+id/guideline635"
                app:layout_constraintTop_toTopOf="@+id/guideline642" />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.29" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline750"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.48" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline630"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.53" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline635"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".455" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline639"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.472" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline637"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.54" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline640"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.552" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline631"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline633"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.63" />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.48" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline642"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.73" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline643"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.68" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline644"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.76" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline645"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline238"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.17" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline647"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline646"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".7" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline648"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

            <Button
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/blue_button_shade"
                android:text="@string/send_otp"
                android:textColor="@color/White"
                app:layout_constraintBottom_toTopOf="@+id/guideline648"
                app:layout_constraintEnd_toStartOf="@+id/guideline646"
                app:layout_constraintStart_toStartOf="@+id/guideline647"
                app:layout_constraintTop_toTopOf="@+id/guideline645" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
